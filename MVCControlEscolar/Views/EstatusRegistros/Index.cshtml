@model IEnumerable<MVCControlEscolar.Models.EstatusRegistro>

@{
    ViewData["Title"] = "Index";
}

<h1>Estatus de Registro</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Nuevo Estatus de Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Nombre) *@
                Nombre
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Status) *@
                Estatus
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Consultar</a>&nbsp;
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> &nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
